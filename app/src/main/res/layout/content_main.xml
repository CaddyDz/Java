<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.englishdz.conversion.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/convert_from_text"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginLeft="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="72dp"
        android:id="@+id/textView"
        tools:ignore="RelativeOverlap,RtlHardcoded"/>

    <EditText
        android:id="@+id/amount_text_view"
        android:text="1.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:ignore="HardcodedText,LabelFor,RelativeOverlap"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"/>

    <Spinner
        android:id="@+id/unit_type_spinner"
        android:layout_alignBottom="@+id/amount_text_view"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/amount_text_view"
        android:layout_below="@+id/amount_text_view"
        android:layout_marginTop="13dp"/>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignStart="@+id/unit_type_spinner"
        android:layout_below="@+id/unit_type_spinner"
        android:layout_marginTop="25dp"

        android:background="@color/colorPrimary"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="6"
        android:padding="15dp">

        <TextView
            android:id="@+id/tsp_unit"
            android:text="@string/tsp_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/cup_unit"
            android:text="@string/cup_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="left|top"/>

        <TextView
            android:id="@+id/tbs_unit"
            android:text="@string/tbs_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/oz_unit"
            android:text="@string/oz_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="left|top"/>

        <TextView
            android:id="@+id/kg_unit"
            android:text="@string/kg_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/qt_unit"
            android:text="@string/qt_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="left|top"/>

        <TextView
            android:id="@+id/gl_unit"
            android:text="@string/gl_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/pd_unit"
            android:text="@string/pd_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="left|top"/>

        <TextView
            android:id="@+id/ml_unit"
            android:text="@string/ml_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/lt_unit"
            android:text="@string/lt_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="left|top"/>

        <TextView
            android:id="@+id/mg_unit"
            android:text="@string/mg_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/pt_unit"
            android:text="@string/pt_unit_text"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_gravity="left|top"/>

    </GridLayout>
</RelativeLayout>
